{
    "scripts": {
        "build": "cd client && yarn build",
        "install-client": "cd client && yarn install",
        "install-server": "cd server && yarn install",
        "heroku-postbuild": "yarn install-client && yarn build && yarn install-server",
        "server": "cd server && yarn start",
        "develop": "concurrently --kill-others-on-fail \"yarn server\" \"yarn start --prefix client\"",
        "start": "yarn server"
    },
    "license": "BHC",
    "dependencies": {
        "@babel/core": "^7.15.5",
        "browserslist": "^4.16.8"
    },
    "devDependencies": {
        "concurrently": "^6.3.0"
    },
    "engines": {
        "node": "12.20.0"
    }
}
